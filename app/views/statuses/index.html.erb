<h1> Check out what all your friends have been up to! </h1>


<%= link_to 'New Status!', new_status_path %>

<table>
<thead>
  <tr>
    <th>Username</th>
    <th>Status</th>
    <th>Likes</th>
  </tr>
</thead>
<tbody>
  <% @statuses.each do |status| %>
    <tr>
      <td><%= link_to status.user_name, status %></td>
      <td><%= status.description %></td>
      <td class="text-right">
        <%= link_to 'Edit', edit_status_path(status)%>
        <%= link_to 'Delete', status, class: "", method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</tobdy>
</table>
